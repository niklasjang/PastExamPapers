<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activitys.SplashActivity" android:background="@drawable/background_pink">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp" app:srcCompat="@drawable/songgolmae_soft"
            android:id="@+id/iv_splashSongolmae"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.15"
            android:layout_marginTop="38dp" android:layout_marginBottom="124dp"
            app:layout_constraintBottom_toTopOf="@+id/progressBar"/>
    <TextView
            android:text="물어보거라 송골!"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/tv_slashContent" app:layout_constraintTop_toBottomOf="@+id/iv_splashSongolmae"
            tools:text="물어보거라 송골!" app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:textSize="44dp"
            android:fontFamily="@font/baedal"
            app:layout_constraintVertical_bias="0.257"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/progressBar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_splashSongolmae" android:layout_marginBottom="43dp"/>
</android.support.constraint.ConstraintLayout>