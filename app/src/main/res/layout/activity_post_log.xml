<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.PostLogActivity">

    <TextView
        android:id="@+id/tvTitle_post_entry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baedal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.368"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvService_post_entry" />

    <TextView
            android:id="@+id/tvLecturename_post_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/baedal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/btnRemove_post_log"
            android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tvProfessorname_post_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/baedal"
        app:layout_constraintBottom_toBottomOf="@+id/tvLecturename_post_entry"
        app:layout_constraintStart_toEndOf="@+id/tvLecturename_post_entry"
        app:layout_constraintTop_toTopOf="@+id/tvLecturename_post_entry" />

    <TextView
        android:id="@+id/tvService_post_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baedal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLecturename_post_entry" />

    <TextView
        android:id="@+id/tvYear_post_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/baedal"
        app:layout_constraintBottom_toBottomOf="@+id/tvService_post_entry"
        app:layout_constraintStart_toEndOf="@+id/tvService_post_entry"
        app:layout_constraintTop_toTopOf="@+id/tvService_post_entry" />

    <TextView
            android:id="@+id/tvTest_post_entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/baedal"
            app:layout_constraintBottom_toBottomOf="@+id/tvYear_post_entry"
            app:layout_constraintStart_toEndOf="@+id/tvYear_post_entry"
            app:layout_constraintTop_toTopOf="@+id/tvYear_post_entry"
    />

    <TextView
        android:id="@+id/tvContents_post_entry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/baedal"
        android:maxHeight="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle_post_entry" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/icon_my_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContents_post_entry" />

    <TextView
            android:id="@+id/tvUsername_post_entry"

            android:layout_width="126dp"
            android:layout_height="33dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/baedal"
            android:textColor="@color/default_underline_indicator_selected_color"
            app:layout_constraintBottom_toBottomOf="@+id/tvReward_post_entry"
            app:layout_constraintStart_toEndOf="@+id/userProfileImage"
            app:layout_constraintTop_toTopOf="@+id/tvReward_post_entry"/>

    <TextView
        android:id="@+id/tvReward_post_entry"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@drawable/icon_q_resized"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/tvVote_post_entry"
        app:layout_constraintEnd_toStartOf="@+id/tvVote_post_entry"
        app:layout_constraintTop_toTopOf="@+id/tvVote_post_entry"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/tvVote_post_entry"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@drawable/icon_thumb_resized"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/tvComment_post_entry"
        app:layout_constraintEnd_toStartOf="@+id/tvComment_post_entry"
        app:layout_constraintTop_toTopOf="@+id/tvComment_post_entry"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvComment_post_entry"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:drawableLeft="@drawable/icon_comment_resized"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview_post_log"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContents_post_entry"
        app:layout_constraintVertical_bias="0.0" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_post_log"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/etComment_post_log"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userProfileImage" />

    <EditText
            android:id="@+id/etComment_post_log"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:background="@color/white"
            android:ems="10"

            android:hint="댓글을 입력하세요."
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    <ProgressBar
        android:id="@+id/plog_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:layout_marginTop="54dp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerview_post_log"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvuri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:autoLink="web"
        app:layout_constraintBottom_toTopOf="@+id/tvVote_post_entry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.145"
        app:layout_constraintStart_toEndOf="@+id/tvContents_post_entry"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <Button
            android:text="삭제"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/btnRemove_post_log" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/tvTest_post_entry"/>

</android.support.constraint.ConstraintLayout>