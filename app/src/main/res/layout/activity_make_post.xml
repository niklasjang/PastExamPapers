<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activitys.MakePostActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etLectureName_make_post"
            app:layout_constraintTop_toTopOf="@+id/tvLectureName_make_post"
            app:layout_constraintBottom_toBottomOf="@+id/tvLectureName_make_post"
            app:layout_constraintStart_toEndOf="@+id/tvLectureName_make_post"

            android:hint="강의명을 입력하세요."
            android:gravity="center_vertical|center_horizontal" android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etProfessorName_make_post"
            app:layout_constraintStart_toEndOf="@+id/tvProfessorName_make_post"

            app:layout_constraintTop_toTopOf="@+id/tvProfessorName_make_post"
            app:layout_constraintBottom_toBottomOf="@+id/tvProfessorName_make_post" android:hint="교수님 성함을 입력하세요."
            android:gravity="center_vertical|center_horizontal" android:layout_marginLeft="8dp"/>
    <TextView
            android:text="강의명"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/tvLectureName_make_post"
            android:gravity="center_vertical|center_horizontal" android:textSize="18sp" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"/>
    <TextView
            android:text="교수명"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/tvProfessorName_make_post"
            app:layout_constraintTop_toBottomOf="@+id/tvLectureName_make_post"
            app:layout_constraintStart_toStartOf="@+id/tvLectureName_make_post"
            app:layout_constraintEnd_toEndOf="@+id/tvLectureName_make_post"
            app:layout_constraintHorizontal_bias="0.0" android:gravity="center_vertical|center_horizontal"
            android:textSize="18sp" android:textStyle="bold"
    />
    <TextView
            android:text="학년"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/tvYear_make_post"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="18sp" android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tvMajor_make_post"
            app:layout_constraintTop_toBottomOf="@+id/tvMajor_make_post"
            app:layout_constraintEnd_toEndOf="@+id/tvMajor_make_post"/>
    <TextView
            android:text="시험"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/tvTest_make_post"
            android:gravity="center_vertical|center_horizontal" android:textSize="18sp" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvYear_make_post"
            app:layout_constraintStart_toStartOf="@+id/tvYear_make_post"
            app:layout_constraintEnd_toEndOf="@+id/tvYear_make_post"/>

    <Spinner
            android:id="@+id/spinner_grade"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:entries="@array/grade"
            app:layout_constraintStart_toEndOf="@+id/tvYear_make_post" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvYear_make_post"
            app:layout_constraintTop_toTopOf="@+id/tvYear_make_post"/>

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rgTest"
            app:layout_constraintBottom_toBottomOf="@+id/tvTest_make_post"
            app:layout_constraintTop_toTopOf="@+id/tvTest_make_post"
            app:layout_constraintStart_toEndOf="@+id/tvTest_make_post"
            android:gravity="center_vertical|center_horizontal" android:layout_marginLeft="8dp">
        <RadioButton
                android:text="중간"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbtn_midterm" android:layout_weight="1"/>
        <RadioButton
                android:text="기말"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbtn_final" android:layout_weight="1"/>
        <RadioButton
                android:text="전체"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbtn_test_all" android:layout_weight="1"/>

    </RadioGroup>
    <TextView
            android:text="서비스"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/tvService_make_post"
            android:gravity="center_vertical|center_horizontal" android:textSize="18sp" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvTest_make_post"
            app:layout_constraintEnd_toEndOf="@+id/tvTest_make_post"
            app:layout_constraintStart_toStartOf="@+id/tvTest_make_post"
    />

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rgService"
            app:layout_constraintBottom_toBottomOf="@+id/tvService_make_post"
            app:layout_constraintTop_toTopOf="@+id/tvService_make_post"
            app:layout_constraintStart_toEndOf="@+id/tvService_make_post"
            android:gravity="center_vertical|center_horizontal" android:layout_marginLeft="8dp">
        <RadioButton
                android:text="질문/답변"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbtn_QnA" android:layout_weight="1"/>
        <RadioButton
                android:text="지식공유"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rbtn_Share" android:layout_weight="1"/>
    </RadioGroup>
    <!--학과 추가-->
    <TextView
            android:text="학과"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:id="@+id/tvMajor_make_post"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="18sp" android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/tvProfessorName_make_post"
            app:layout_constraintEnd_toEndOf="@+id/tvProfessorName_make_post"
            app:layout_constraintStart_toStartOf="@+id/tvProfessorName_make_post"/>
    <Spinner
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner_major" app:layout_constraintStart_toEndOf="@+id/tvMajor_make_post"
            android:entries="@array/major"
            app:layout_constraintTop_toTopOf="@+id/tvMajor_make_post"
            app:layout_constraintBottom_toBottomOf="@+id/tvMajor_make_post" android:layout_marginStart="8dp"/>

    <FrameLayout
            android:id="@+id/frameLayout_make_post"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvService_make_post">

        <TextView
                android:id="@+id/tvFrameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center_vertical|center_horizontal"
                android:text="서비스를 선택하세요."/>
    </FrameLayout>

    <Button
            android:id="@+id/btnDone_make_post"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="완료"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:background="@color/grey" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/rgTest" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/rgService"/>

    <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="파일\n업로드"
            app:layout_constraintEnd_toStartOf="@+id/btnDone_make_post"
            app:layout_constraintTop_toTopOf="@+id/btnDone_make_post"
            app:layout_constraintBottom_toBottomOf="@+id/btnDone_make_post"
            android:background="@color/grey" app:layout_constraintVertical_bias="0.0"
            android:id="@+id/btnPDF_make_post" android:layout_marginRight="8dp"/>



</android.support.constraint.ConstraintLayout>
