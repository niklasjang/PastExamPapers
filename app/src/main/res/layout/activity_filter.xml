<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tvClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="강의명"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/tvProfessorName_make_post"
            app:layout_constraintEnd_toStartOf="@+id/etClassName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"

    />

    <TextView
            android:id="@+id/tvProfessorName_make_post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="교수명"
            android:textSize="24dp"
            app:layout_constraintBottom_toTopOf="@+id/tvYear"
            app:layout_constraintEnd_toStartOf="@+id/etProfessorName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvClassName"
            app:layout_constraintVertical_chainStyle="packed"
            tools:layout_editor_absoluteY="37dp" />


    <EditText
            android:id="@+id/etClassName"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:ems="10"
            android:hint="과목명을 입력하세요."
            android:inputType="textPersonName"
            app:layout_constraintBaseline_toBaselineOf="@id/tvClassName"
            app:layout_constraintBottom_toTopOf="@+id/etProfessorName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvClassName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

    <EditText
            android:id="@+id/etProfessorName"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="교수님 성함을 입력하세요."
            android:inputType="textPersonName"
            app:layout_constraintBaseline_toBaselineOf="@id/tvProfessorName_make_post"
            app:layout_constraintBottom_toTopOf="@id/tvYear"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvProfessorName_make_post"
            app:layout_constraintTop_toBottomOf="@id/etClassName" />

    <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="학년"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/tvSemester"
            app:layout_constraintEnd_toStartOf="@+id/btnFirstYear"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvProfessorName_make_post"
            app:layout_constraintVertical_chainStyle="packed"
            tools:layout_editor_absoluteY="69dp" />

    <Button
            android:id="@+id/btnFirstYear"
            android:layout_width="73dp"
            android:layout_height="0dp"
            android:text="1학년"
            app:layout_constraintBottom_toTopOf="@+id/tvSemester"
            app:layout_constraintEnd_toStartOf="@+id/btnSecondYear"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/tvYear"
            app:layout_constraintTop_toBottomOf="@+id/tvProfessorName_make_post" />

    <Button
            android:id="@+id/btnSecondYear"
            android:layout_width="73dp"
            android:layout_height="0dp"
            android:text="2학년"
            app:layout_constraintBottom_toTopOf="@+id/tvSemester"
            app:layout_constraintEnd_toStartOf="@+id/btnThirdYear"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/btnFirstYear"
            app:layout_constraintTop_toBottomOf="@+id/tvProfessorName_make_post" />

    <Button
            android:id="@+id/btnThirdYear"
            android:layout_width="73dp"
            android:layout_height="0dp"
            android:text="3학년"
            app:layout_constraintBottom_toTopOf="@+id/tvSemester"
            app:layout_constraintEnd_toStartOf="@+id/btnFourthYear"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/btnSecondYear"
            app:layout_constraintTop_toBottomOf="@+id/tvProfessorName_make_post" />

    <Button
            android:id="@+id/btnFourthYear"
            android:layout_width="73dp"
            android:layout_height="0dp"
            android:text="4학년"
            app:layout_constraintBottom_toTopOf="@+id/tvSemester"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/btnThirdYear"
            app:layout_constraintTop_toBottomOf="@+id/tvProfessorName_make_post" />

    <TextView
            android:id="@+id/tvSemester"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="학기"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/tvTest"
            app:layout_constraintEnd_toStartOf="@+id/btnFirstSemester"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvYear"
            app:layout_constraintVertical_chainStyle="packed"
            tools:layout_editor_absoluteY="109dp" />

    <Button
            android:id="@+id/btnFirstSemester"
            android:layout_width="73dp"
            android:layout_height="0dp"
            android:text="1학기"
            app:layout_constraintBottom_toTopOf="@+id/tvTest"
            app:layout_constraintEnd_toStartOf="@+id/btnSecondSemester"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/tvSemester"
            app:layout_constraintTop_toBottomOf="@+id/tvYear" />

    <Button
            android:id="@+id/btnSecondSemester"
            android:layout_width="73dp"
            android:layout_height="0dp"
            android:text="2학기"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toTopOf="@+id/tvTest"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/btnFirstSemester"
            app:layout_constraintTop_toBottomOf="@+id/tvYear" />

    <TextView
            android:id="@+id/tvTest"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="시험"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/btnMidtermTest"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSemester" />

    <Button
            android:id="@+id/btnMidtermTest"
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:text="중간"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toStartOf="@+id/btnFinalTest"
            app:layout_constraintStart_toEndOf="@+id/tvTest"
            app:layout_constraintTop_toBottomOf="@+id/tvSemester" />

    <Button
            android:id="@+id/btnFinalTest"
            android:layout_width="73dp"
            android:layout_height="40dp"

            android:text="기말"
            app:layout_constrainedHeight="true"
            app:layout_constraintEnd_toStartOf="@+id/btnBothTest"
            app:layout_constraintStart_toEndOf="@+id/btnMidtermTest"
            app:layout_constraintTop_toBottomOf="@+id/tvSemester" />

    <Button
            android:id="@+id/btnBothTest"
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:text="모두"
            app:layout_constrainedHeight="true"
            app:layout_constraintStart_toEndOf="@+id/btnFinalTest"
            app:layout_constraintTop_toBottomOf="@+id/tvSemester" />

    <Button
            android:id="@+id/btnSet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="완료"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTest"
            app:layout_constraintVertical_chainStyle="packed" />


</android.support.constraint.ConstraintLayout>

